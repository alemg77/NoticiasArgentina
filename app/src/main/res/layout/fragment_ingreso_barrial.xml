<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Vista.Fragment.FragmentIngresoBarrial">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragmentIngresoBarrialSeccionTextView"
        android:gravity="center"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        android:text="barriales"
        android:textColor="#fff"
        android:textSize="18dp"
        android:textStyle="italic"
        android:paddingVertical="5dp"
        android:background="@drawable/fondoseccion"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/ic_baseline_location_on_24"
            app:elevation="20dp"
            android:id="@+id/fragmentDetalleIngresoBarrialFABubicacion"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/ic_baseline_camera_alt_24"
            app:elevation="20dp"
            android:id="@+id/fragmentIngresoBarrialFABsubirFoto"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/ic_baseline_videocam_24"
            app:elevation="20dp"
            android:id="@+id/fragmentIngresoBarrialFABsubirVideo"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="340dp"
        android:layout_gravity="center"
        app:cardCornerRadius="18dp"
        android:layout_height="150dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        app:cardElevation="10dp"
        android:outlineSpotShadowColor="@color/colorPrimaryDark">

    <TextView
        android:id="@+id/fragmentDetalleBarrialTituloTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"

        android:paddingVertical="6dp"
        android:paddingHorizontal="20dp"
        android:textSize="14dp"
        android:textColor="#9BA0BC"
        android:text="Escriba el TÃ­tulo"
        android:textAlignment="center"
        />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:id="@+id/fragmentIngresoBarrialEditTextTitulo"/>

    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:layout_width="340dp"
        android:layout_gravity="center"
        app:cardCornerRadius="18dp"
        android:layout_height="370dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:outlineSpotShadowColor="@color/colorPrimaryDark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragmentDetalleBarrialtextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:paddingVertical="6dp"
                android:paddingHorizontal="20dp"
                android:textSize="14dp"
                android:textColor="#9BA0BC"
                android:text="Escriba el Texto"
                android:textAlignment="center" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:id="@+id/fragmentIngresoBarrialEditTextTexto"/>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Imagen"
        android:textSize="14dp"
        android:textColor="#9BA0BC"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/fragmentIngresoBarrialImageViewFoto1"
            tools:src="@drawable/fondo"
             android:scaleType="centerCrop"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/fragmentIngresoBarrialImageViewFoto2"
            tools:src="@drawable/fondo"
            android:scaleType="centerCrop"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/fragmentIngresoBarrialImageViewFoto3"
            tools:src="@drawable/fondo"
            android:scaleType="centerCrop"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="30dp"
            android:src="@drawable/ic_baseline_play_arrow_24"
            android:backgroundTint="#FF9800"
            app:elevation="20dp"
            />

    </LinearLayout>


</LinearLayout>