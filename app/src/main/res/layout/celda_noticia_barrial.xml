<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/RecyclerviewFondoNoticias"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/CeldaNoticiaImagen"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toBottomOf="@+id/CeldaNoticiaTitulo" />

            <TextView
                android:id="@+id/CeldaNoticiaTitulo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:hint="Titulo"
                android:gravity="center"
                android:textColor="@color/negro"
                android:textSize="20dp"
                app:layout_constraintEnd_toStartOf="@+id/contadorDownVote"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imagenUpVote"
                android:layout_height="0dp"
                android:layout_width="25dp"
                android:layout_marginRight="5dp"
                app:layout_constraintBottom_toTopOf="@+id/CeldaNoticiaImagen"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/CeldaNoticiaTitulo" />

            <TextView
                android:id="@+id/contadorUpVote"
                android:layout_width="25dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/imagenUpVote"
                app:layout_constraintEnd_toStartOf="@+id/imagenUpVote"
                app:layout_constraintTop_toTopOf="@+id/imagenUpVote" />

            <ImageView
                android:id="@+id/imagenDownVote"
                android:layout_width="25dp"
                android:layout_height="0dp"
                android:layout_marginRight="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/imagenUpVote"
                app:layout_constraintEnd_toStartOf="@+id/contadorUpVote"
                app:layout_constraintTop_toTopOf="@+id/contadorUpVote" />

            <TextView
                android:id="@+id/contadorDownVote"
                android:layout_width="25dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/imagenDownVote"
                app:layout_constraintEnd_toStartOf="@+id/imagenDownVote"
                app:layout_constraintTop_toTopOf="@+id/imagenUpVote" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>