<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        android:id="@+id/celdaComentariosCardView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/celdaComentariosTextViewComentario"
            android:text="Este es un comentario muy interesante que todos van a querer leer y likear porque lo escribÃ­ yo que soy un capo total."
            android:textSize="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="10dp">

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="leopoldo.cantina@gmail.com"
            android:textSize="12dp"
            android:textColor="@color/colorPrimaryDark"
                android:layout_weight="1"
            android:id="@+id/celdaComentariosTextViewEmail"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25-12-2020"
                android:textSize="12dp"
                android:textColor="#000"
                android:layout_weight="1"
                android:id="@+id/celdaComentariosTextViewFecha"/>

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="10dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    app:icon="@drawable/ic_baseline_thumb_up_24"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    android:layout_weight="1"
                    android:backgroundTint="#fff"
                    android:id="@+id/celdaComentariosBotonLike"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="55"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:id="@+id/celdaComentariosTextViewLike"/>

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:backgroundTint="#fff"
                    android:textAlignment="viewEnd"
                    app:icon="@drawable/ic_baseline_thumb_down_24"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    android:id="@+id/celdaComentariosBotonDislike"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:id="@+id/celdaComentariosTextViewDislike"/>

            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>