<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragmentTituloNoticiastextView"
        android:gravity="center"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        android:text="titulo"
        android:textColor="#fff"
        android:textSize="18dp"
        android:textStyle="italic"
        android:paddingVertical="5dp"
        android:background="@drawable/fondoseccion"
        />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp"
        android:layout_height="200dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        app:cardElevation="10dp">

        <ImageView
            android:id="@+id/fragmentDetalleNoticiasImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        app:cardCornerRadius="18dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="383dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/fragmentDetalleNoticiastextView"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:text="TextView"
                android:textAlignment="gravity"
                android:textColor="#04000C"
                android:textSize="18dp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/fragmentCometariosTextViewTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"

            android:paddingHorizontal="20dp"
            android:paddingVertical="6dp"
            android:text="Comentarios"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="14dp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/FragmentComentariosRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:outlineSpotShadowColor="@color/colorPrimaryDark"
            app:cardCornerRadius="18dp"
            app:cardElevation="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="6dp"
                android:text="Escriba su comentario"
                android:textAlignment="center"
                android:textColor="#9BA0BC"
                android:textSize="14dp"
                />

            <EditText
                android:id="@+id/EditTextComentarioNuevo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp" />

        </androidx.cardview.widget.CardView>


    </LinearLayout>


    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/botonEnviarComentario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:gravity="center"
        android:textAlignment="center" />
</LinearLayout>